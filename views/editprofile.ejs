<html>
    <head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
<!-- Bootstrap core CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.11.0/css/mdb.min.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= profile.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/profiles/<%= profile._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text"  class="form-control"  name ="firstname" value="<%=profile.firstname%>">
                </div>
                <div class="form-group">
                     <input type="text"  class="form-control"  name ="surname" value="<%=profile.surname%>">
                </div>
                <div class="form-group">
                    <input type="text"  class="form-control"  name ="DOB" value="<%=profile.DOB%>">
                </div>
                 <div class="form-group">
                    <input type="text"  class="form-control"  name ="state" value="<%=profile.state%>">
                </div>
                 <div class="form-group">
                    <input type="text"  class="form-control"  name ="address" value="<%=profile.address%>">
                </div>
                 <div class="form-group">
                    <input type="text"  class="form-control"  name ="ocupation" value="<%=profile.ocupation%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="image" value="<%= profile.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= profile.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/profiles">Go Back</a>
        </div>
    </div>
</div>
     <!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.11.0/js/mdb.min.js"></script>
</body> 

</html>